{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<body>
<div class="navlog">
    <img class="icon-logo" src="{{ asset('../images/crosssword.png') }}" width="40px">
    <span class="label-nav" >CONNEXION</span>
    <span class="label-nav" >S'INSCRIRE</span>
</div>
<div class="login-interface">

        <div class="login-face">
            <img src="{{ asset('../images/welcome.jpg') }}" class="login-picture">
        </div>

        <div class="form-box shadow">
                        {% if error %}
                    <div class="alert alert-danger" style="
    margin: 4%;
    padding: 2%;
    font-family: 'Pixel';
    background: crimson;
">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            <div class="login-title">
                            <img class="title-logo" src="{{ asset('../images/crosssword.png') }}" width="100px">
            <h1 class="justify-content-center logo-title"> ADVEN QUEST </h1>
            </div>


            <form method="post">


                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                    <div class="">
                    <div class="col-form-connexion">
                            <div class="col-label">
                                <h2> LOGIN : </h2>
                            </div>
                            <div class="col-widget">
                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" placeholder="IDENTIFIANT" class="form-control form_widget" autocomplete="username" required autofocus>
                            </div>
                    </div>
                    <div class="col-form-connexion">
                            <div class="col-label">
                                <h2>PASSWORD : </h2>
                            </div>
                            <div class="col-widget">
                            <input type="password" name="password" id="inputPassword" placeholder="MOT DE PASSE" class="form-control form_widget" autocomplete="current-password" required>
                            </div>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
            <div class="row-form">
                <button class="btn-register" style="margin:0!important;" type="submit">
                    CONNEXION
                </button>
            </div></form>
        </div>

</div>

{% endblock %}
